<div class= 'form-group p-4 '>
  <h1 class="text-center">Edit Case</h1>
  <div class='container-fluid row justify-content-md-center'>
    <%= form_for @case do |f| %>
      <span style="color: red">* required field:</span>
    <div class="form-row" style="padding: 10px">
      <div class="form-group m-2">
        <span style="color: red"> * </span><%= f.label :category %>
        <%= f.select(:category, options_for_select([["Roof"], ["Patio"], ["Driveway"], ['Windows'], ['Multiple']])) %>
      </div>
      <div class="form-group m-2">
        <span style="color: red"> * </span><%= f.label :status %>
        <%= f.select(:status, options_for_select([["Open"], ["In Progress"], ["Completed"]]), { :include_blank => 'Select'}) %> 
      </div>
    </div>
    <div class="form-row">
      <div class="form-group m-2" style="padding-top: 10px">
        <%= f.label :estimated_completion_date %>
        <%= f.date_field :estimated_completion_date %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group m-2">
        <span style="color: red"> * </span><%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
    </div>
    <div>
        <%= hidden_field_tag(:client_id, params[:id]) %>
    </div>
    <div class="form-row">
      <div class="form-group m-2" style="padding-top: 10px">
          <%= f.label :images %>
          <%= f.file_field :images %>
      </div>
    </div>
    <div class = 'col-sm'>
  </div>
    <div class="form-row col-md">
      <div class="form-group m-2" style="padding-top: 10px">
          <%= f.submit :Submit, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
    <% if @case.images.attached? %>
      <div class="rounded float-right m-auto">
          <% @case.images.map do |image| %>
            <%= image_tag image.variant(resize: "200"), class: "mx-auto d-block rounded", style: 'padding: 10px' %>
          <%end%>
      </div>
    <%end%>
  </div>
</div>