<div class= 'form-group p-4 container'>
  <h1 class="text-center">New Case</h1>
    <%= form_for @case do |f| %>
    <div class="col-md-6 offset-md-3">
      <span class="col-md-6 offset-md-3" style="color: red">* required field:</span>
    <div class=" row col-md-6 offset-md-3" style="padding: 10px">
      <p><span style="color: red"> * </span><%= f.label :category %>
      <%= f.select(:category, options_for_select([["Roof"], ["Patio"], ["Driveway"], ['Windows'], ['Multiple']])) %> 
      </p>
    </div>
    <div class="col-md-6 offset-md-3">
        <p><span style="color: red"> * </span><%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
        </p>
    </div>
    <div class="col-md-6 offset-md-3" style="padding-top: 10px">
      <p><span style="color: red"> * </span><%= f.label :status %>
      <%= f.select(:status, options_for_select([["Open"], ["In Progress"], ["Completed"]])) %> 
      </p>
    </div>
    <div>
        <%= hidden_field_tag(:client_id, params[:id]) %>
    </div>
     <div class="col-md-6 offset-md-3" style="padding-top: 10px">
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>
    <div class="col-md-6 offset-md-3 mt-3">
        <%= f.submit :Submit, class: 'btn btn-primary' %>
    </div>
    </div>
  <% end %>
</div>