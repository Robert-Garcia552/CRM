<div class= 'form-group p-4 container'>
  <h1 class="text-center">New Case</h1>
    <%= form_for @case do |f| %>
    <div>
      <span style="color: red">* required field:</span>
    <div class="form-row" style="padding: 10px">
      <div class="form-group col-md-4">
        <span style="color: red"> * </span><%= f.label :category %>
        <%= f.select(:category, options_for_select([["Roof"], ["Patio"], ["Driveway"], ['Windows'], ['Multiple']])) %> 
      </div>
      <div class="form-group col-md-4">
        <span style="color: red"> * </span><%= f.label :status %>
        <%= f.select(:status, options_for_select([["Open"], ["In Progress"], ["Completed"]])) %> 
      </div>
    </div>
      <div class="form-row">
        <div class="form-group col-md-6" style="padding-top: 10px">
          <%= f.label :estimated_completion_date %>
          <%= f.date_field :estimated_completion_date %>
        </div>
      </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <span style="color: red"> * </span><%= f.label :description %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>
    </div>
    <div>
        <%= hidden_field_tag(:client_id, params[:id]) %>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4" style="padding-top: 10px">
          <%= f.label :images %>
          <%= f.file_field :images %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6" style="padding-top: 10px">
          <%= f.submit :Submit, class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>