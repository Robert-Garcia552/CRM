<div class="jumbotron m-4">
    <div class = "container text-center">
        <h1 class="display-4 text-center"> <%= @client.first_name + ' ' + @client.last_name %> </h1>
    </div>
</div>

<div class="container m-4">
  <h2 class="display-4"> Cases: </h2>
  <%= link_to 'New Case', new_case_path, class: "btn btn-primary btn-rounded btn-sm", action: :new %>
</div>

<div class="container">
  <% @case.map do |cases| %>
    <p>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <h5 class="display-6"> <%= cases.category %> </h5>
          <p>Description: <%= cases.description %></p>
          <% if cases.image.attached? %>
            <p class="rounded float-right">
              <%= image_tag cases.image.variant(resize: "200"), class: "mx-auto d-block rounded" %>
            </p>
          <% end %>
          <%= link_to 'Comment', new_comment_path(id: cases.id), class: "btn btn-primary btn-rounded btn-sm", action: :new %>
        </li>
      </ul>
    </p>
  <% end %>
</div>